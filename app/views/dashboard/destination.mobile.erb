<div data-role="header">
  <a href="<%= destination_url %>" data-icon="back">Destination</a>
  <h1>Destination</h1>
</div>

<div data-role="content" style="width:100%; height:100%; padding:0;" pageurl="destination"> 
  <form action="<%= search_url %>" method="post">
    <div data-role="fieldcontain">
        <label for="name">Destination Point:</label>
        <input type="text" name="destination_point" class="destination_point_input" value="" />
        <input type="hidden" class="destination_latitude" name="pos[lat]">
        <input type="hidden" class="destination_longitude" name="pos[lng]">
    </div>
    <div class="map_canvas" style="width:100%; height:350px"></div>

    <div data-role="fieldcontain">
      <input type="submit" value="Select" data-role="button" data-theme="b">
    </div>
  </form>
</div>
