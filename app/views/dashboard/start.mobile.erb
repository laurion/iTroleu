<div data-role="header">
  <h1>Starting Location</h1>
</div>

<div data-role="content" style="width:100%; height:100%; padding:0;" pageurl="starting"> 
  <form action="<%= destination_url %>" method="post">
    <div data-role="fieldcontain">
        <label for="name">Starting Point:</label>
        <input type="text" name="start_point" class="start_point_input" value="" />
        <input type="hidden" class="start_latitude" name="pos[lat]">
        <input type="hidden" class="start_longitude" name="pos[lng]">
    </div>
    <div class="map_canvas" style="width:100%; height:350px"></div>

    <div data-role="fieldcontain">
      <input type="submit" value="Select" data-role="button" data-theme="b">
    </div>
  </form>
</div>
